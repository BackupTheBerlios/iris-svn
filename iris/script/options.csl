		control_sethandler(button, FUNC_ONCLICK, "handler_on_options_select2");
        	button = gui_addbutton(-45, 235, 0xec, 0xec, 0xec);
		control_sethandler(button, FUNC_ONCLICK, "handler_on_options_select4");

