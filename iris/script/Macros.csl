macro_camup()
{
	camera_move(1, 3);
}

macro_camdown()
{
	camera_move(0, 3);
}

macro_zoomin()
{
	camera_zoom(0, 3);
}

macro_zoomout()
{
	camera_zoom(1, 3);
}

macro_toggleperspective()
{
	var perspective = config_getvalue(10);
	config_setvalue(10, !perspective);
}

macro_camleft()
{
	config_setvalue(10, 0);
	camera_move(2, 3);
}

macro_camright()
{
	config_setvalue(10, 0);
	camera_move(3, 3);
}

macro_firstperson()
