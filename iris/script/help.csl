var help;
var help_x = 270;
var help_y = 5;
var help_open = 0;

/*
-------------------------------------------------------------------------------------------------
 forward declarations
-------------------------------------------------------------------------------------------------
*/

display_help();

/*
-------------------------------------------------------------------------------------------------
Event Handelers
-------------------------------------------------------------------------------------------------
*/

handler_on_help (const sender)
{
	if(help_open == 0) {
		help_open = 1;
		display_help();
	}
}

handler_on_close_help(const sender)
{
	help_open = 0;
}


/*
-------------------------------------------------------------------------------------------------
Display Functions
-------------------------------------------------------------------------------------------------
*/

display_help()
{
	help = gui_addcontainer(config_getvalue(CONFIG_WIDTH) - 450, 20, 430, 420);
	gui_setcontainer(help);
	control_setalpha(help, 0);
	//control_fade(help, 255, 100);
	control_sethandler(help, FUNC_ONCLOSE, "handler_on_close_help");
	
	var border = gui_addborder(-5, -5, 0xa28, 0);
	control_setsize(border, 430, 420);
	
	//gui_addlabel(180,28, "HELP", 0, 149);
	
	gui_addlabel(165,40, "CONTROLS", 0, 149);
	gui_addlabel(25,90, "Movement:", 7, 149);
	gui_addlabel(170,90, "Right click and hold (UO style)", 7,  1);
	gui_addlabel(170,110, "OR     Arrow Keys", 7, 1);
	
